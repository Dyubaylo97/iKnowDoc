<html lang="en" ng-app="searchApp">
	<head>
		<title>	DocSearch </title>
		<meta charset="utf-8">
		<link href = "style/frameworks/bootstrap.min.css" rel="stylesheet"> <!-- bootstrap -->
		<link href = "style/DocSearch.css" rel="stylesheet"> <!-- Стили CSS -->
		<link href="style/images/icon.png" rel="icon" type="image/x-icon"/> <!-- Иконка -->
	</head>

	<body ng-controller="searchController">
	
	<div class="DivLeft">
	<!-- Стартовая страница -->
		<div id = "block">
			<header> <!-- Лого -->
				<p class="text-center MarginHeader">
					<img src = "style/images/Logo.png" width ="40%" title ="InterSystems" onclick = "logoClick()"/>
				</p>
			</header>
			
			<div> <!-- Поисковая строка и кнопки поиска для разных размеров окна браузера -->
				<form class="form-horizontal container-fluid MarginSearchLine">
					<div class="input-groop col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-offset-2 col-xs-8">
							<input type="text" ng-model="search.text" class="form-control" id="Search" placeholder="Search" list="prompts">
								<datalist id="prompts" >
									<option ng-repeat="prompt in results" value="{{prompt.snippet}}"></option>
								</datalist> 
					</div>
					<button type="submit" class="btn btn-primary hidden-xs" ng-click = "makeSearch()">
						<span class="glyphicon glyphicon-search"></span> Search
					</button>
					<button type="submit" class="btn btn-primary hidden-sm hidden-md hidden-lg" ng-click = "makeSearch()">
						<span class="glyphicon glyphicon-search"></span>
					</button>
				</form><br>
			</div>
		</div>
		
		<!-- Страница с результатами поиска -->
		<div id = "block2" style = "display:none;">
		<header class="ResultHeader" style="height:100px"> <!-- Шапка -->
			<form class="form-horizontal">
				<div class="col-md-3 col-sm-3 col-xs-3 Logo"> <!-- Лого -->
					<a href="javascript:window.location.reload()"><img src = "style/images/Logo.png" width ="100%" title ="InterSystems"/></a>
				</div>
				<div class="input-groop col-md-6 col-sm-6 col-xs-6 MarginHeader"> <!-- Строка поиска -->
						<input type="text" ng-model="search.text" class="form-control" id="Search" placeholder="Search"/>
				</div>
				<div class="col-md-3 col-sm-3 col-xs-3 MarginHeader"> <!-- Кнопки поиска для разных размеров окна браузера -->
					<button type="submit" class="btn btn-primary hidden-xs" ng-click = "makeSearch()">
						<span class="glyphicon glyphicon-search"></span> Search
					</button>
					<button type="submit" class="btn btn-primary hidden-sm hidden-md hidden-lg" ng-click = "makeSearch()">
						<span class="glyphicon glyphicon-search"></span>
					</button>
					<div class="btn-group dropdown"> <!-- Меню настроек -->
  						<button class="btn dropdown-toggle" data-toggle="dropdown">Settings <span class="caret"></span></button>
  						<ul class="dropdown-menu">
    						<li><a href="#">111</a></li>
   							<li><a href="#">222</a></li>
    						<li><a href="#">333</a></li>
    						<li><a href="#">444</a></li>
  						</ul>
					</div>
				</div>	
			</form>
		</header>
		<div> <!-- Результаты поиска -->
			<ul>
				<li ng-repeat = "result in results" style="margin-top:10px; list-style-type: none;">
					<a href="http://localhost:57773/csp/docbook/DocBook.UI.Page.cls?KEY={{result.metadata.component_blockid}}" target="_blank">{{result.metadata.component_blockid}}</a>
					<br>
					<span>{{result.snippet}}</span>
				</li>
			</ul>
		</div>
		
		<div class="pagination-wrap"> <!-- Пагинация -->
			<ul class="pagination">
				<li ng-repeat="page in paginationList" ng-click="showPage(page.link)" ng-class="{'active': currentPageNum() == page.link}"><a ng-bind-html="page.name"></a></li>
			</ul>
		</div>
		
	</div>
</div>
	
		<script type="text/javascript" src = "js/vendor/jquery-3.2.0.min.js"></script> 
		<script type="text/javascript" src = "js/vendor/bootstrap.min.js"></script>
		<script type="text/javascript" src = "js/vendor/angular.js"></script>
		
		<script type="text/javascript" src = "js/app/app.js"></script>
		<script type="text/javascript" src = "js/app/controllers.js"></script>
</body>
</html>